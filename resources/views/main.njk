{% extends "parent.njk" %}

{% block content %}
<div class="row">
  {% for product in products %}
  <div class="col-md-4 col-sm-6 col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Termék név:
        <span class="label label-warning pull-right">{{ product.name }}</span>
      </div>
      <ul class="list-group">
        <li class="list-group-item"> termék méretei: {{ product.unit_size }}</li>
        <li class="list-group-item"> termék mennyisége: {{ product.quantity }}</li>
      </ul>
    </div>
  </div>
  {% endfor %}

</div>
{% endblock %}